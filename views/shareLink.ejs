<style>
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
  
    img {
      border-radius: 50%;
      margin-bottom: 20px;
    }
  
    p {
      font-size: 18px;
      margin-bottom: 10px;
    }
  
    b {
      font-weight: bold;
    }
  
    .btn {
      display: inline-block;
      padding: 8px 16px;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      background-color: #4caf50;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s;
    }
  
    .btn:hover {
      background-color: #45a049;
    }
  </style>
  


<%- include('layouts/header.ejs') %>

<div class="container">
  <div>
    <img src="/<%=  group.image %>" alt="" width="200px" height="200px" />
    <p>
      <b>
        Group Name :
      </b>
      <%= group.name %>
    </p>
    <p>
      <b>Total Members :</b>
      <%= totalMembers %>
    </p>
    <% if(available !=0){ %>
    <p>
      Available for
      <b>
        <%= available %>
      </b>
      Members only.
    </p>
    <% } if(isOwner){ %>
    <p>You are the admin of this group, so you cannot join this group.</p>
    <% } else if(isJoined>0){ %>
    <p>You have already joined this group.</p>
    <% } else if(available==0){ %>
    <p>Group already filled.</p>
    <% } else { %>
    <button class="btn btn-primary join-now" data-id="<%= group._id %>">
      Join Group
    </button>
    <% } %>
  </div>
</div>

<%- include('layouts/footer.ejs') %>
